{% extends 'login.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <br>
            <br>
            <br>
            <div class="card" id="animated-card">
                <h1 class="fashion_taital text-center" style="padding-top: 10px; padding-bottom: 10px;">
                    <span style="color: #164D73;">Register</span>
                </h1>
                <div class="card-body">
                    {{ form_errors(registrationForm) }}
                    {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

                    <div class="form-group" style="margin-bottom: 20px;">
                        {{ form_label(registrationForm.firstname, 'Firstname', {'label_attr': {'class': 'font-weight-bold'}}) }}
                        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Enter your firstname'}}) }}
                        {{ form_errors(registrationForm.firstname) }}
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        {{ form_label(registrationForm.lastname, 'Lastname', {'label_attr': {'class': 'font-weight-bold'}}) }}
                        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Enter your lastname'}}) }}
                        {{ form_errors(registrationForm.lastname) }}
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'font-weight-bold'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'font-weight-bold'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your password'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, 'Agree to Terms', {'label_attr': {'class': 'form-check-label font-weight-bold'}}) }}
                        </div>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="form-group text-center">
<button type="submit" class="btn btn-warning" style="background-color: #778A17;">Register</button>
                    </div>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes slideInRight {
        0% {
            transform: translateX(100%);
            opacity: 0;
        }
        100% {
            transform: translateX(0);
            opacity: 1;
        }
    }
    #animated-card {
        animation: slideInRight 0.5s forwards;
    }
</style>
{% endblock %}
