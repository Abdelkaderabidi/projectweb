{% extends 'front.html.twig' %}

{% block body %}

<!-- Add CSS styles inside head or link an external CSS file -->
<head>
    <style>
        /* Your CSS styles */
        .product-card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            border-radius: 10px;
            overflow: hidden;
            max-width: 250px; /* Reduce the width of the card */
            margin: auto; /* Center the card */
        }

        .product-card:hover {
            transform: translateY(-5px);
        }

        .product-img img {
            width: 100%;
            height: 200px; /* Set a fixed height for the images */
            object-fit: cover; /* Ensure the image covers the area without distortion */
            display: block;
            border-radius: 10px 10px 0 0;
        }

        .product-details {
            padding: 10px; /* Reduce padding to fit smaller cards */
        }

        .product-details h4 {
            font-size: 14px; /* Slightly smaller font size */
            font-weight: bold;
            margin-bottom: 8px;
        }

        .product-details p {
            font-size: 12px; /* Smaller font size */
            color: #777;
            margin-bottom: 8px;
        }

        .product-price {
            font-size: 14px; /* Slightly smaller font size */
            font-weight: bold;
            color: #007bff;
            margin-bottom: 8px;
        }

        .promo-message {
            background-color: #ffc107;
            color: #333;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            margin-bottom: 8px;
            font-size: 12px; /* Smaller font size */
        }

        .promo-details {
            margin-top: 8px;
        }

        .btn-buy {
            background-color: #ffc107;
            color: #333;
            border: none;
            padding: 5px 10px; /* Reduce padding for a smaller button */
            border-radius: 20px;
            transition: background-color 0.3s;
            font-weight: bold;
            font-size: 12px; /* Smaller font size */
        }

        .btn-buy:hover {
            background-color: #ffcd1a;
        }
    </style>
</head>

<br><br><br><br><br><br><br><br>

<!-- Product section start -->
<div class="tab-content">
    <div id="tab-1" class="tab-pane fade show p-0 active">
        <div class="row">
            {% for produits_group in produits|batch(3) %}
                {% for prod in produits_group %}
                    <div class="col-md-4 d-flex justify-content-center"> <!-- Center cards within columns -->
                        <div class="product-card">
                            <div class="product-img">
                                <img src="{{ asset('images/' ~ prod.image) }}" alt="{{ prod.nomProd }}">
                            </div>
                            <div class="product-details">
                                <h4>{{ prod.nomProd }}</h4>
                                <p class="product-price">
                                    {% if prod.enPromo %}
                                        <del>{{ prod.prix }} DT</del> 
                                        <span>{{ prod.prix - (prod.prix * (prod.prixApresPromo / 100)) }} DT</span>
                                    {% else %}
                                        {{ prod.prix }} DT
                                    {% endif %}
                                </p>
                                <p>{{ prod.description }}</p>
                                <p>Quantity: {{ prod.quantite }}</p>
                                {% if prod.enPromo %}
                                    <div class="promo-message">En promotion! {{ prod.prixApresPromo }} %</div>
                                    <div class="promo-details">
                                        <p><strong>Date de d√©but de promotion:</strong> {{ prod.dateDebutPromo|date('Y-m-d') }}</p>
                                        <p><strong>Date de fin de promotion:</strong> {{ prod.dateFinPromo|date('Y-m-d') }}</p>
                                    </div>
                                {% endif %}
                                <a href="#" class="btn btn-buy"><i class="fa fa-shopping-bag me-2"></i> Add to cart</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
