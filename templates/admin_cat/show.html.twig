{% extends 'back.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
            <br>
            <br>
            <br>
                <div class="card">
                     <h1 class="fashion_taital text-center" style="padding-top: 10px; padding-bottom: 10px;">
                     <span style="color: #164D73;">categorie : {{categorie.nomCat}}</span>
                    </h1>
                    <div class="card-body">
                        <div class="text-center">
                            <table class="table" style="width: 50%; margin: 0 auto;">
                                <tbody>
                                    <tr>
                                        <th>IdCat</th>
                                        <td>{{ categorie.idCat }}</td>
                                    </tr>
                                    <tr>
                                        <th>NomCat</th>
                                        <td>{{ categorie.nomCat }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <div class="mb-3">
                                <a href="{{ path('app_admin_cat_index') }}" class="btn btn-primary" style="background-color: #778A17;">Back To List</a>
                            </div>
                            {{ include('admin_cat/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
